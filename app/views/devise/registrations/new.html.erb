    </div>
  </div>
</div>
<body>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <div class='body'>
      <div class="sign-up-box">
        <div class="row">
          <div class="twelve columns center">
            <h5 class='h5'>Let's Begin!</h5>
            <form>
              <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
              <br>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
              <br>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
              <p>Already have an account? <%= link_to "Sign in", new_user_session_path %> </p>
              <div class="button-position">
                <div class="actions">
                  <%= f.submit "Sign up", class:'button-signup'  %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <%end%>
</body>