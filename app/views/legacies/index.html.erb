<p id="notice"><%= notice %></p>

<h1>Listing Legacies</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Realationship status</th>
      <th>Smoker</th>
      <th>Coverage amount</th>
      <th>Insurance years</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legacies.each do |legacy| %>
      <tr>
        <td><%= legacy.age %></td>
        <td><%= legacy.relationship_status %></td>
        <td><%= legacy.smoker %></td>
        <td><%= legacy.coverage_amount %></td>
        <td><%= legacy.insurance_years %></td>
        <td><%= legacy.user_id %></td>
        <td><%= link_to 'Show', legacy %></td>
        <td><%= link_to 'Edit', edit_legacy_path(legacy) %></td>
        <td><%= link_to 'Destroy', legacy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

